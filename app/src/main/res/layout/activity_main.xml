<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type to convert from:"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_above="@id/convert_from">
        </TextView>
        <Spinner
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:id="@+id/convert_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_above="@id/convert_from_label">
        </Spinner>
        <TextView
            android:id="@+id/convert_from_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type to convert to:"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_above="@id/convert_to">
        </TextView>
        <Spinner
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:id="@+id/convert_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_above="@id/input_from">
        </Spinner>
        <EditText
            android:id="@+id/input_from"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/convert_from_input"
            android:inputType="number"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:imeOptions="actionGo"
            android:layout_above="@id/dividing_line"
            android:background="@drawable/back"/>
        <View
            android:id="@+id/dividing_line"
            android:layout_width="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="3dp"
            android:background="#673AB7"
            android:layout_above="@id/result_label"/>
        <TextView
            android:id="@+id/result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result:"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_above="@id/result_field">
        </TextView>
        <TextView
            android:id="@+id/result_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/back"/>
    </LinearLayout>
</RelativeLayout>